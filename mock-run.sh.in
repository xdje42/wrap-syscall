set -x

GDB=${GDB:=@GDB@}

./mock-test-app.x &
PID=$!

PRELOAD_LIB=$(pwd)/wrap-syscall-preload.so

#batch=""
batch="--batch"

LD_PRELOAD=$PRELOAD_LIB \
  $GDB \
  $batch -ex "set \$pid = $PID" -ex "set \$strace = 0" -x ./mock-run.gdb

kill -9 $PID
